<%- include('partials/header'); -%>

<div class="bg-gray-800 pt-3"> <!--middlebg, mostly hidden-->
    <div class="rounded-tl-3xl bg-gradient-to-r from-blue-900 to-gray-800 p-4 shadow text-2xl text-white"> <!--Analytics gradiant-->
        <h3 class="font-bold pl-2">Analytics</h3>
    </div>
</div>

<div class="flex flex-wrap"> <!--metric cards-->
    <div class="w-full md:w-1/2 xl:w-1/3 p-6">
        <!--Metric Card "Total Users"-->
        <div class="bg-gradient-to-b from-pink-200 to-pink-100 border-b-4 border-pink-500 rounded-lg shadow-xl p-5">
            <div class="flex flex-row items-center">
                <div class="flex-shrink pr-4">
                    <div class="rounded-full p-5 bg-pink-600"><i class="fas fa-users fa-2x fa-inverse"></i></div>
                </div>
                <div class="flex-1 text-right md:text-center">
                    <h5 class="font-bold uppercase text-gray-600">Total Users</h5>
                    <h3 class="font-bold text-3xl">6 <span class="text-pink-500"><i class="fas fa-exchange-alt"></i></span></h3>
                </div>
            </div>
        </div>
        <!--/Metric Card "Total Users"-->
    </div>

<div class="flex flex-row flex-wrap flex-grow mt-2"> <!--Graphs section-->

    <div class="w-full md:w-1/2 xl:w-1/3 p-6">
        <!--Graph 1 Card-->
        <div class="bg-white border-transparent rounded-lg shadow-xl">
            <div class="bg-gradient-to-b from-gray-300 to-gray-100 uppercase text-gray-800 border-b-2 border-gray-300 rounded-tl-lg rounded-tr-lg p-2">
                <h5 class="font-bold uppercase text-gray-600">People Who Are Vaccinated</h5>
            </div>
            <div class="p-5">
                <script src="./chartOne.js"></script>
                <table class="w-full p-5 text-gray-700 text-left" id="chartOneData"></table>
            </div>
        </div>
        <!--/Graph 1 Card-->
    </div>

    <div class="w-full md:w-1/2 xl:w-1/3 p-6">
        <!--Graph 2 Card-->
        <div class="bg-white border-transparent rounded-lg shadow-xl">
            <div class="bg-gradient-to-b from-gray-300 to-gray-100 uppercase text-gray-800 border-b-2 border-gray-300 rounded-tl-lg rounded-tr-lg p-2">
                <h5 class="font-bold uppercase text-gray-600">People In Quarantine</h5>
            </div>
            <div class="p-5">
                <script src="./chartTwo.js"></script>
                <table class="w-full p-5 text-gray-700 text-left" id="chartTwoData"></table>
            </div>
        </div>
        <!--/Graph 2 Card-->
    </div>

    <div class="w-full md:w-1/2 xl:w-1/3 p-6">
        <!--Graph 3 Card-->
        <div class="bg-white border-transparent rounded-lg shadow-xl">
            <div class="bg-gradient-to-b from-gray-300 to-gray-100 uppercase text-gray-800 border-b-2 border-gray-300 rounded-tl-lg rounded-tr-lg p-2">
                <h5 class="font-bold uppercase text-gray-600">Employees</h5>
            </div>
            <div class="p-5">
                <script src="./chartThree.js"></script>
                <table class="w-full p-5 text-gray-700 text-left" id="chartThreeData"></table>
            </div>
        </div>
        <!--/Graph 3 Card-->
    </div>
        
    <!-- Database Table -->
    <div class="w-full md:w-1/2 xl:w-full p-3">
        <div class="bg-white border-transparent rounded-lg shadow-xl">
            <div class="bg-gradient-to-b from-gray-300 to-gray-100 uppercase text-gray-800 border-b-2 border-gray-300 rounded-tl-lg rounded-tr-lg p-2">
                <h5 class="font-bold uppercase text-gray-600">Database</h5>
            </div>
            <div class="p-5">

                <script src="./data.js"></script>
                    
                <!-- table for showing data -->
                <table class="w-full p-5 text-gray-700 text-left" id="employees">
                </table>
            </div>
        </div>
</div>

    <%- include('partials/footer'); -%>
